<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.loan.LoanFragment">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:background="#fafafa"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="한도조회 "
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/colorRed"
                        android:textSize="15dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/apply_addr"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_border_edittext"
                    android:gravity="center_vertical"
                    android:hint="주소 검색"
                    android:paddingHorizontal="10dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/apply_addr_detail"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_border_edittext"
                    android:hint="상세 주소"
                    android:paddingHorizontal="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/apply_price_inquiry"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorMint"
                    android:gravity="center"
                    android:text="부동산 가격 조회"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/apply_max_price_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/background_border_mint_3dp"
                    android:orientation="vertical"
                    android:paddingVertical="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="최대 대출 한도 금액"
                        android:textAlignment="center"
                        android:textColor="@color/colorMint"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/apply_max_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="담당자 조회 후\n한도 확인 가능"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="(심사 후 변동 가능)"
                        android:textAlignment="center"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="희망 대출금액 "
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="*"
                        android:textColor="@color/colorRed"
                        android:textSize="15dp" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/apply_rg"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_border_edittext"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_price_choice"
                        android:button="@null"
                        android:gravity="center"
                        android:text="10만원"
                        android:textColor="@drawable/selector_white_cgrey"
                        android:textSize="12dp" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_price_choice"
                        android:button="@null"
                        android:gravity="center"
                        android:text="100만원"
                        android:textColor="@drawable/selector_white_cgrey"
                        android:textSize="12dp" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_price_choice"
                        android:button="@null"
                        android:gravity="center"
                        android:text="1000만원"
                        android:textColor="@drawable/selector_white_cgrey"
                        android:textSize="12dp" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_price_choice"
                        android:button="@null"
                        android:gravity="center"
                        android:text="1억원"
                        android:textColor="@drawable/selector_white_cgrey"
                        android:textSize="12dp" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/selector_price_choice"
                        android:button="@null"
                        android:gravity="center"
                        android:text="초기화"
                        android:textColor="@drawable/selector_white_cgrey"
                        android:textSize="12dp" />
                </RadioGroup>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_border_edittext"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">


                    <EditText
                        android:id="@+id/apply_amount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:inputType="number"
                        android:maxLength="16"
                        android:text="0"
                        android:textSize="14dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/apply_won" />

                    <TextView
                        android:id="@+id/apply_won"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|right"
                        android:gravity="center"
                        android:text=" 원"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="문의사항"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/apply_comment"
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_border_edittext"
                    android:gravity="top"
                    android:padding="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/apply_term"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="개인정보 수집 이용 동의서의 내용을 확인하였으며, \n이에 동의합니다"
                    android:textColor="#333333"
                    android:textColorLink="#333333"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/apply_submit"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorMint"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="동의 후 대출신청"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>