<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.apply.ApplyFragment">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/fragment_loan_tab"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/colorMint"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorTextBlack"
            app:tabTextAppearance="@style/tabText18_bold"
            app:tabTextColor="@color/colorCGrey" />

        <FrameLayout
            android:id="@+id/fragment_loan_contents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_loan_tab" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>