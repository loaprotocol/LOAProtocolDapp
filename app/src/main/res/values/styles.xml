<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorTextBlack</item>

        <!-- No Title Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="tabText18_bold" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabText16_bold" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tabText16" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
    </style>

</resources>